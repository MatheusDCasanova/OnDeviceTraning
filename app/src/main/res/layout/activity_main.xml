<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On-device Model Training"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#6200EA"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Status TextView -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Status: Waiting for inputs"
        android:textColor="#FF5722"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Download Progress Bar -->
    <ProgressBar
        android:id="@+id/downloadProgressBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Configurations Button -->
    <LinearLayout
        android:id="@+id/btn_configurations_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/downloadProgressBar">

        <Button
            android:id="@+id/btn_configurations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#607D8B"
            android:padding="12dp"
            android:text="Set Configurations"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/checkmark_configurations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="1dp"
            android:visibility="gone"
            android:backgroundTint="#607D8B"
            android:src="@drawable/ic_check"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <!-- Select Model Button -->
    <LinearLayout
        android:id="@+id/btn_model_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_configurations_container">

        <Button
            android:id="@+id/btn_select_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#6200EA"
            android:padding="12dp"
            android:text="Select Model"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/checkmark_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="1dp"
            android:visibility="gone"
            android:src="@drawable/ic_check"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <!-- Select Dataset Button -->
    <LinearLayout
        android:id="@+id/btn_dataset_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_model_container">

        <Button
            android:id="@+id/btn_select_dataset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:padding="12dp"
            android:text="Select Dataset"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/checkmark_dataset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="1dp"
            android:visibility="gone"
            android:src="@drawable/ic_check"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <!-- Start Training Button -->
    <LinearLayout
        android:id="@+id/btn_training_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_dataset_container">

        <Button
            android:id="@+id/btn_start_training"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:padding="12dp"
            android:text="Start Training"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/checkmark_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="1dp"
            android:visibility="gone"
            android:src="@drawable/ic_check"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/downloadProgressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_configurations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Configurations: Not Set"
        android:textColor="#607D8B"
        android:textSize="20sp"
        android:padding="16dp"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:ellipsize="end"
        android:gravity="start"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_training_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
